<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lunchLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lunchTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lunch"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"/>

    <LinearLayout
        android:id="@+id/sandwichLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sandwichTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sandwich"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/sandwichRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Take 2 slices of bread.\n2. Spread butter on both slices.\n3. Add your desired filling, such as ham and cheese.\n4. Cut the sandwich in half and serve."
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/saladLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/saladTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salad"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/saladRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Wash and chop your desired salad greens, such as lettuce or spinach.\n2. Add your desired toppings, such as tomatoes, cucumbers, and carrots.\n3. Drizzle with dressing, such as vinaigrette or ranch.\n4. Serve cold."
            android:padding="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pastaLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pastaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pasta"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/pastaRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Cook your desired pasta, such as spaghetti or penne, according to the package directions.\n2. In a separate pan, heat up your desired sauce, such as marinara or alfredo.\n3. Combine the cooked pasta and sauce, and mix well.\n4. Serve hot with grated Parmesan cheese."
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>